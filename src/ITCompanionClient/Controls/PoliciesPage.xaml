<UserControl
    x:Class="ITCompanionClient.Controls.PoliciesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="RootGrid" RowSpacing="8" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="SearchBox" Width="280" PlaceholderText="Search policies..." TextChanged="OnSearchChanged" />
            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="32" Height="32" />
            <TextBlock x:Name="ErrorText" Foreground="DarkRed" Visibility="Collapsed" />
        </StackPanel>
        <ListView x:Name="PoliciesList" Grid.Row="1" IsItemClickEnabled="True" ItemClick="OnItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Spacing="2" Padding="4">
                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Key.Name}" FontSize="12" Opacity="0.7" />
                        <TextBlock Text="{Binding CategoryPath}" FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>