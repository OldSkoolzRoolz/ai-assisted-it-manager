<Window x:Class="KC.ITCompanion.ClientApp.Controls.SearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Policies" Height="160" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Text:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Width="260" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12">
            <CheckBox Content="Match Key" IsChecked="{Binding SearchInKey}" Margin="0,0,12,0"/>
            <CheckBox Content="Match Name" IsChecked="{Binding SearchInName}" Margin="0,0,12,0"/>
            <CheckBox Content="Match Category" IsChecked="{Binding SearchInCategory}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Search" Width="80" Margin="0,0,8,0" IsDefault="True" Command="{Binding ExecuteSearchCommand}"/>
            <Button Content="Close" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>