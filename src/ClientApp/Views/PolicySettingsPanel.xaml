<UserControl x:Class="KC.ITCompanion.ClientApp.Views.PolicySettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:KC.ITCompanion.ClientApp.ViewModels"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="PolicySettingTemplate">
            <Border BorderBrush="{StaticResource Brush.Border}" Background="{StaticResource Brush.Card}" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                        <CheckBox IsChecked="{Binding Enabled}" Content="Enabled" Margin="0,0,8,0" />
                        <TextBlock Text="{Binding PartId}" Style="{StaticResource Control.Text.Label}" />
                    </StackPanel>
                    <ContentControl Content="{Binding}" Margin="0,0,0,4">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock Text="(No editor)" Foreground="{StaticResource Brush.Text.Secondary}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ValueType}" Value="Boolean">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ValueType}" Value="Numeric">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBox Width="140" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" ToolTip="Numeric value" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ValueType}" Value="Text">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBox Width="220" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ValueType}" Value="Enum">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <ComboBox Width="220"
                                                              ItemsSource="{Binding EnumItems}"
                                                              SelectedValuePath="Value" DisplayMemberPath="Name"
                                                              SelectedValue="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                    <ItemsControl ItemsSource="{Binding Errors}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="{StaticResource Brush.Danger}" Text="{Binding}" FontSize="11" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding SelectedPolicySettings}" ItemTemplate="{StaticResource PolicySettingTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="300" MinWidth="300" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>