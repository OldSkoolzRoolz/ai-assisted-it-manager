<UserControl x:Class="KC.ITCompanion.ClientApp.Views.PolicyEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:KC.ITCompanion.ClientApp.Views"
             xmlns:vm="clr-namespace:KC.ITCompanion.ClientApp.ViewModels"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal" Margin="4" DockPanel.Dock="Top">
                <Button Content="Load" Command="{Binding LoadPoliciesCommand}" Margin="0,0,6,0" />
                <TextBox Width="150" Margin="0,0,6,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search" Command="{Binding SearchLocalPoliciesCommand}" Margin="0,0,6,0" />
                <Button Content="Logs" Click="OnOpenLogs" Margin="0,0,6,0" />
                <Button Content="DevDiag" Click="OnOpenDevDiag" />
            </StackPanel>
            <TreeView x:Name="CategoryTreeView"
                      ItemsSource="{Binding CategoryTree}"
                      SelectedItemChanged="CategoryTree_SelectedItemChanged"
                      TreeViewItem.Expanded="TreeViewItem_Expanded"
                      Margin="4">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem" >
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Top" />
                    </Style>
                    <HierarchicalDataTemplate DataType="{x:Type vm:CategoryTreeItem}" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </DockPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding SelectedPolicy.Name}" FontSize="20" Margin="12,8,12,4" />
            <views:PolicySettingsPanel Grid.Row="1" Margin="4" />
        </Grid>
    </Grid>
</UserControl>