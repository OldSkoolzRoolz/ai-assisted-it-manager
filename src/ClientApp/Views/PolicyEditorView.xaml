<UserControl x:Class="KC.ITCompanion.ClientApp.Views.PolicyEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:KC.ITCompanion.ClientApp.Views"
             xmlns:vm="clr-namespace:KC.ITCompanion.ClientApp.ViewModels"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal" Margin="4" DockPanel.Dock="Top">
                <Button Content="Load" Command="{Binding LoadPoliciesCommand}" Margin="0,0,6,0" Style="{StaticResource Control.Button.Base}" />
                <TextBox Width="160" Margin="0,0,6,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search" Command="{Binding SearchLocalPoliciesCommand}" Margin="0,0,6,0" Style="{StaticResource Control.Button.Base}" />
                <Button Content="Logs" Click="OnOpenLogs" Margin="0,0,6,0" Style="{StaticResource Control.Button.Base}" />
                <Button Content="DevDiag" Click="OnOpenDevDiag" Style="{StaticResource Control.Button.Base}" />
            </StackPanel>
            <ListBox Margin="4" ItemsSource="{Binding FilteredPolicies}" SelectedItem="{Binding SelectedPolicy}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="2">
                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding CategoryPath}" Style="{StaticResource Control.Text.Caption}" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding SelectedPolicy.DisplayName}" Style="{StaticResource Control.Text.Title}" Margin="12,8,12,4" />
            <views:PolicySettingsPanel Grid.Row="1" Margin="4" />
        </Grid>
    </Grid>
</UserControl>