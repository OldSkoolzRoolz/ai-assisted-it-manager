<UserControl x:Class="KC.ITCompanion.ClientApp.Views.PolicyEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:KC.ITCompanion.ClientApp.Views"
             xmlns:vm="clr-namespace:KC.ITCompanion.ClientApp.ViewModels"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- Provide a generic textbox style if not already defined -->
        <Style x:Key="Control.TextBox.Base" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <HierarchicalDataTemplate DataType="{x:Type vm:CategoryTreeItem}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Text="{Binding Name}" Style="{StaticResource Control.Text.Base}"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Top">
                <Button Content="Load" Command="{Binding LoadPoliciesCommand}" Style="{StaticResource Control.Button.Primary}" Margin="0,0,6,0" />
                <TextBox Width="180" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource Control.TextBox.Base}" Margin="0,0,6,0" />
                <Button Content="Logs" Click="OnOpenLogs" Style="{StaticResource Control.Button.Base}" Margin="0,0,6,0" />
                <Button Content="DevDiag" Click="OnOpenDevDiag" Style="{StaticResource Control.Button.Base}" />
            </StackPanel>
            <TreeView Margin="4" ItemsSource="{Binding CategoryTree}" SelectedItemChanged="OnCategoryTreeSelected">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource Control.TreeViewItem}">
                        <EventSetter Event="Expanded" Handler="OnCategoryExpanded" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </DockPanel>
        <Grid Grid.Column="1" Grid.Row="0" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Breadcrumb}" Style="{StaticResource Control.Text.Caption}" Margin="0,0,0,4" TextTrimming="CharacterEllipsis" />
            <TextBlock Text="{Binding SelectedPolicy.DisplayName}" Style="{StaticResource Control.Text.Title}" Margin="0,0,0,8" />
            <views:PolicySettingsPanel Grid.Row="2" />
        </Grid>
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Background="{DynamicResource Brush.Surface.Low}">
            <StatusBarItem>
                <TextBlock Text="{Binding PolicyFileCount, StringFormat=Policy Files: {0}}" Style="{StaticResource Control.Text.Caption}" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding FilteredPolicies.Count, StringFormat=Visible Policies: {0}}" Style="{StaticResource Control.Text.Caption}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>