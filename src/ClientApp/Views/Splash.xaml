<!-- SplashWindow.xaml -->
<Window x:Class="KC.ITCompanion.ClientApp.Views.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:views="clr-namespace:KC.ITCompanion.ClientApp.Views"
        Title="Enterprise AI Policy Manager"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black"
        Width="600" Height="400"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
        <Grid>
            <TextBlock x:Name="SplashText"
                   FontFamily="Consolas"
                   FontSize="14"
                   Foreground="Lime"
                   TextWrapping="Wrap"
                   Margin="20"
                   Text="LOADING FROM TAPE DRIVE... PLEASE WAIT"
                   />
        </Grid>
    </Window>
