<Window x:Class="ClientApp.Views.DevDiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:ClientApp.ViewModels"
        Title="Dev Diagnostics" Height="700" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="DB Schemas">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,0,8,0" />
                        <TextBlock Text="Schemas" FontWeight="Bold" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBox Grid.Row="1" Text="{Binding SelectedSchema, Mode=OneWay}" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
            <TabItem Header="DB Data">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="4" >
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,0,8,0" />
                        <ComboBox ItemsSource="{Binding TableNames}" SelectedItem="{Binding SelectedTable}" Width="220" Margin="0,0,8,0"/>
                        <TextBox Width="200" Margin="0,0,8,0" ToolTip="Filter" Text="{Binding RowFilter, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox Width="140" Margin="0,0,4,0" ToolTip="Sort Column" Text="{Binding SortColumn, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Content="Desc" IsChecked="{Binding SortDesc}" VerticalAlignment="Center" />
                    </StackPanel>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding TableRows}" AutoGenerateColumns="True" IsReadOnly="True" />
                </Grid>
            </TabItem>
            <TabItem Header="Registry">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,0,8,0" />
                        <TextBlock Text="HKLM / HKCU Settings Roots" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TreeView Grid.Row="1" ItemsSource="{Binding RegistryRoots}">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type viewModels:RegistryNode}" ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text=": " />
                                    <TextBlock Text="{Binding Value}" FontFamily="Consolas"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>