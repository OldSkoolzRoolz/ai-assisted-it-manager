<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Window / Shell Styles -->
  <Style x:Key="Shell.Window" TargetType="Window">
    <Setter Property="Background" Value="{StaticResource Brush.Surface}" />
    <Setter Property="FontFamily" Value="{StaticResource Font.Default}" />
  </Style>
  <Style TargetType="StatusBar">
    <Setter Property="Background" Value="{StaticResource Brush.Surface.Alt}" />
  </Style>
  <Style TargetType="TabControl">
    <Setter Property="Margin" Value="8" />
  </Style>
  <Style TargetType="TabItem">
    <Setter Property="Padding" Value="12,6" />
  </Style>
</ResourceDictionary>