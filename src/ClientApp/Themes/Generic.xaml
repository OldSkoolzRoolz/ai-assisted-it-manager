<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Foundation: existing custom items -->
    <Style x:Key="CleanTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
    </Style>

    <!-- Placeholder: future DataGrid styling tokens -->
    <Style x:Key="Control.DataGrid.Base" TargetType="DataGrid">
        <Setter Property="RowHeight" Value="28" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource Brush.Surface.Alt}" />
    </Style>
</ResourceDictionary>