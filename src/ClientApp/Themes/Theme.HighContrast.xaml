<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="BaseTheme.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <!-- High Contrast Theme Colors -->
  <Color x:Key="Color.Primary.500">#FFFFFFFF</Color>
  <Color x:Key="Color.Primary.600">#FFFFFFFF</Color>
  <Color x:Key="Color.Primary.700">#FFFFFFFF</Color>
  <Color x:Key="Color.Secondary.500">#FFFFEE58</Color>
  <Color x:Key="Color.Neutral.000">#FF000000</Color>
  <Color x:Key="Color.Neutral.050">#FF000000</Color>
  <Color x:Key="Color.Neutral.100">#FF000000</Color>
  <Color x:Key="Color.Neutral.200">#FF1A1A1A</Color>
  <Color x:Key="Color.Neutral.300">#FF333333</Color>
  <Color x:Key="Color.Neutral.400">#FF4D4D4D</Color>
  <Color x:Key="Color.Neutral.500">#FF808080</Color>
  <Color x:Key="Color.Neutral.600">#FFB3B3B3</Color>
  <Color x:Key="Color.Neutral.700">#FFE6E6E6</Color>
  <Color x:Key="Color.Neutral.800">#FFFFFFFF</Color>
  <Color x:Key="Color.Danger.500">#FFFF0000</Color>
  <Color x:Key="Color.Warning.500">#FFFFFF00</Color>
  <Color x:Key="Color.Success.500">#FF00FF00</Color>
  <Color x:Key="Color.Info.500">#FF00B0FF</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary.500}" />
  <SolidColorBrush x:Key="Brush.Primary.Hover" Color="{StaticResource Color.Primary.600}" />
  <SolidColorBrush x:Key="Brush.Primary.Active" Color="{StaticResource Color.Primary.700}" />
  <SolidColorBrush x:Key="Brush.Secondary" Color="{StaticResource Color.Secondary.500}" />
  <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Neutral.050}" />
  <SolidColorBrush x:Key="Brush.Surface.Alt" Color="{StaticResource Color.Neutral.100}" />
  <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Neutral.400}" />
  <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Neutral.800}" />
  <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Neutral.600}" />
  <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Color.Danger.500}" />
  <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning.500}" />
  <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success.500}" />
  <SolidColorBrush x:Key="Brush.Info" Color="{StaticResource Color.Info.500}" />
  <SolidColorBrush x:Key="Brush.Transparent" Color="#00FFFFFF" />
  <SolidColorBrush x:Key="Brush.Panel.Dark" Color="{StaticResource Color.Neutral.800}" />
  <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Color.Neutral.100}" />
</ResourceDictionary>
