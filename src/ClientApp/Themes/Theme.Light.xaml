<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="BaseTheme.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <!-- Light Theme Color Tokens -->
  <Color x:Key="Color.Primary.500">#512BD4</Color>
  <Color x:Key="Color.Primary.600">#4426B5</Color>
  <Color x:Key="Color.Primary.700">#371F96</Color>
  <Color x:Key="Color.Secondary.500">#FF9800</Color>
  <Color x:Key="Color.Neutral.000">#FFFFFFFF</Color>
  <Color x:Key="Color.Neutral.050">#FFF7F7F9</Color>
  <Color x:Key="Color.Neutral.100">#FFE5E7EB</Color>
  <Color x:Key="Color.Neutral.200">#FFD1D5DB</Color>
  <Color x:Key="Color.Neutral.300">#FF9CA3AF</Color>
  <Color x:Key="Color.Neutral.400">#FF6B7280</Color>
  <Color x:Key="Color.Neutral.500">#FF4B5563</Color>
  <Color x:Key="Color.Neutral.600">#FF374151</Color>
  <Color x:Key="Color.Neutral.700">#FF1F2937</Color>
  <Color x:Key="Color.Neutral.800">#FF111827</Color>
  <Color x:Key="Color.Danger.500">#FFDC2626</Color>
  <Color x:Key="Color.Warning.500">#FFF59E0B</Color>
  <Color x:Key="Color.Success.500">#FF10B981</Color>
  <Color x:Key="Color.Info.500">#FF0EA5E9</Color>

  <!-- Derived Brushes -->
  <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary.500}" />
  <SolidColorBrush x:Key="Brush.Primary.Hover" Color="{StaticResource Color.Primary.600}" />
  <SolidColorBrush x:Key="Brush.Primary.Active" Color="{StaticResource Color.Primary.700}" />
  <SolidColorBrush x:Key="Brush.Secondary" Color="{StaticResource Color.Secondary.500}" />
  <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Neutral.050}" />
  <SolidColorBrush x:Key="Brush.Surface.Alt" Color="{StaticResource Color.Neutral.100}" />
  <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Neutral.200}" />
  <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Neutral.800}" />
  <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Neutral.500}" />
  <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Color.Danger.500}" />
  <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning.500}" />
  <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success.500}" />
  <SolidColorBrush x:Key="Brush.Info" Color="{StaticResource Color.Info.500}" />
  <SolidColorBrush x:Key="Brush.Transparent" Color="#00FFFFFF" />
  <SolidColorBrush x:Key="Brush.Panel.Dark" Color="{StaticResource Color.Neutral.700}" />
  <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Color.Neutral.100}" />
</ResourceDictionary>
