<?xml version="1.0" encoding="UTF-8"?>

<Application
    x:Class="KC.ITCompanion.ClientApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Active theme (default Light). Swap Source at runtime for Dark / HighContrast -->
                <ResourceDictionary Source="Themes/Colors.xaml" />
                <ResourceDictionary Source="Themes/Brushes.xaml" />
                <ResourceDictionary Source="Themes/Spacing.xaml" />
                <ResourceDictionary Source="Themes/Typography.xaml" />
                <ResourceDictionary Source="Themes/Controls.Buttons.xaml" />
                <ResourceDictionary Source="Themes/Controls.Text.xaml" />
                <ResourceDictionary Source="Themes/Window.xaml" />
                <ResourceDictionary Source="Themes/Generic.xaml" />
                <ResourceDictionary Source="Themes/ThemeManager.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Compatibility aliases for legacy keys (map to new token styles) -->
            <Style x:Key="Action" TargetType="Button" BasedOn="{StaticResource Control.Button.Base}" />
            <Style x:Key="PrimaryAction" TargetType="Button" BasedOn="{StaticResource Control.Button.Primary}" />
            <Style x:Key="MyLabel" TargetType="TextBlock" BasedOn="{StaticResource Control.Text.Label}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>