<Window x:Class="KC.ITCompanion.ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:KC.ITCompanion.ClientApp.Views"
        mc:Ignorable="d"
        Title="Policy Editor" Height="600" Width="1000" MinHeight="450" MinWidth="800">
    <!-- Root layout uses DockPanel so we can dock Menu (top) and StatusBar (bottom) -->
    <DockPanel LastChildFill="True">
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Open ADMX..." InputGestureText="Ctrl+O" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Refresh" InputGestureText="F5" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Validate Policies" />
                <MenuItem Header="Deploy" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="v0.1" />
            </StatusBarItem>
        </StatusBar>

        <!-- Central workspace with tabs -->
        <TabControl>
            <TabItem Header="Policy Editor">
                <views:PolicyEditorView />
            </TabItem>
            <TabItem Header="Deployment">
                <Grid Margin="12">
                    <TextBlock Text="Deployment workflow (placeholder)" FontSize="16" />
                </Grid>
            </TabItem>
            <TabItem Header="Audit Log">
                <Grid Margin="12">
                    <TextBlock Text="Audit log view (placeholder)" FontSize="16" />
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Margin="12">
                    <StackPanel>
                        <TextBlock Text="Settings (placeholder)" FontSize="16" Margin="0,0,0,8" />
                        <TextBlock Text="Future configuration options will appear here." TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>