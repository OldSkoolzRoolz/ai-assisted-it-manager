<Window x:Class="KC.ITCompanion.ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:KC.ITCompanion.ClientApp.Views"
        mc:Ignorable="d"
        Title="IT Companion" Height="600" Width="1100" MinHeight="500" MinWidth="900" Style="{StaticResource Shell.Window}">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Validate Policies" />
                <MenuItem Header="Deploy" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem><TextBlock Text="Ready" /></StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right"><TextBlock Text="v0.1" /></StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Status">
                <views:StatusOverviewView />
            </TabItem>
            <TabItem Header="Policies">
                <views:PoliciesReadOnlyView />
            </TabItem>
            <TabItem Header="Logs">
                <views:LogAggregateView />
            </TabItem>
            <TabItem Header="Editor">
                <views:PolicyEditorView />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>